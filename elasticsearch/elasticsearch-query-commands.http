######################################################################

### bool query
GET /example_index/_search
{
  "query": {
    "bool": {
      "must": [
        { "match": { "field1": "value1" } },
        { "range": { "numeric_field": { "gte": 10, "lte": 100 } } }
      ],
      "filter": [
        { "term": { "status.keyword": "active" } }
      ],
      "must_not": [
        { "match": { "field2": "unwanted_value" } }
      ],
      "should": [
        { "match": { "optional_field": "optional_value" } }
      ],
      "minimum_should_match": 1
    }
  }
}

######################################################################

### match_phrase
GET /example_index/_search
{
  "query": {
    "match_phrase": { "my_field": "exact phrase" }
  }
}

### query_string
GET /example_index/_search
{
  "query": {
    "query_string": {
      "query": "field1:value1 AND field2:(value2 OR value3)"
    }
  }
}

### simple_query_string
GET /example_index/_search
{
  "query": {
    "simple_query_string": {
      "fields": ["message", "service"],
      "query": "+error +timeout",
    }
  }
}

