alias kns-tekton="kubens tekton-pipelines"
alias kns-vault="kubens vault-system"
alias kns-velero="kubens velero"

alias krew="kubectl krew"
alias krew-index-list="kubectl krew index list"
alias krew-info="kubectl krew info"
alias krew-install="kubectl krew install"
alias krew-list="kubectl krew list"
alias krew-search="kubectl krew search"
alias krew-uninstall="kubectl krew uninstall"
alias krew-update="kubectl krew update"
alias krew-upgrade="kubectl krew upgrade"
alias krew-version="kubectl krew version"

alias ktail="kubectl tail"

alias ktree="kubectl tree"
alias ktreedep="kubectl tree deployments"
alias ktreerc="kubectl tree replicationcontrollers"
alias ktreers="kubectl tree replicasets"
alias ktreests="kubectl tree statefulsets"
