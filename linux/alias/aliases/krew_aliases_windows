alias kns-backstage="kubens backstage-system"
alias kns-bookinfo="kubens bookinfo"
alias kns-default="kubens default"
alias kns-drone="kubens drone-system"
alias kns-cassandra="kubens cassandra-system"
alias kns-cert="kubens cert-manager"
alias kns-chart="kubens chart-system"
alias kns-confluent="kubens confluent-operator"
alias kns-elastic="kubens elastic-system"
alias kns-gitlab="kubens gitlab-system"
alias kns-harbor="kubens harbor-system"
alias kns-influx="kubens influx-system"
alias kns-ingress="kubens ingress-nginx"
alias kns-istio="kubens istio-system"
alias kns-istio-operator="kubens istio-operator"
alias kns-jenkins="kubens jenkins-system"
alias kns-kafka="kubens kafka-system"
alias kns-kafka-operator="kubens kafka-operator"
alias kns-kube-node-lease="kubens kube-node-lease"
alias kns-kube-public="kubens kube-public"
alias kns-kube-system="kubens kube-system"
alias kns-kraken="kubens kraken-system"
alias kns-local-path="kubens local-path-storage"
alias kns-metallb="kubens metallb-system"
alias kns-mongo="kubens mongo-system"
alias kns-mssql="kubens mssql-system"
alias kns-myproject="kubens myproject"
alias kns-mysql="kubens mysql-system"
alias kns-minio="kubens minio-system"
alias kns-minio-operator="kubens minio-operator"
alias kns-minio-tenant="kubens minio-tenant"
