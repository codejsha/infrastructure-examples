### ksqldb

### log directory
LOG_DIR=""

### java home
# JAVA_HOME="/usr/lib/jvm/java-11"
# JAVA_HOME="/usr/lib/jvm/java-1.8.0"
# JAVA_HOME="/usr/lib/jvm/zulu11"
# JAVA_HOME="/usr/lib/jvm/zulu8"
JAVA_HOME=""

### memory options
KSQL_HEAP_OPTS=" \
-Xms3g -Xmx3g \
"

### performance
KSQL_JVM_PERFORMANCE_OPTS=" \
-server \
-XX:+UseConcMarkSweepGC \
-XX:+CMSClassUnloadingEnabled \
-XX:+CMSScavengeBeforeRemark \
-XX:+DisableExplicitGC \
-XX:MaxInlineLevel=15 \
-Djava.awt.headless=true \
"
# -XX:+UseG1GC \
# -XX:MaxGCPauseMillis=20 \
# -XX:InitiatingHeapOccupancyPercent=35 \
# -XX:+ExplicitGCInvokesConcurrent \
# -XX:ParallelGCThreads= \
# -XX:ConcGCThreads= \

### generic jvm settings
KSQL_OPTS=" \
-D${SERVER_NAME} \
-javaagent:${CONFLUENT_HOME}/prometheus/jmx_prometheus_javaagent-0.15.0.jar=1234:${CONFLUENT_HOME}/prometheus/confluent_ksql.yml \
"

### gc option
GC_LOG_ENABLED="true"

### jmx
# JMX_PORT=""
KSQL_JMX_OPTS=" \
-Dcom.sun.management.jmxremote \
-Dcom.sun.management.jmxremote.authenticate=false \
-Dcom.sun.management.jmxremote.ssl=false \
"

### log4j
KSQL_LOG4J_OPTS=" \
-Dlog4j.configuration=file:${CONFLUENT_HOME}/log4j/ksqldb-log4j.properties \
"
