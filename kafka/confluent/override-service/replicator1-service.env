### replicator

### log directory
LOG_DIR="/mnt/replicator/logs"

### java home
# JAVA_HOME="/usr/lib/jvm/java-11"
# JAVA_HOME="/usr/lib/jvm/java-1.8.0"
JAVA_HOME="/usr/lib/jvm/java-1.8.0"

### memory options
KAFKA_HEAP_OPTS=" \
-Xms2g -Xmx2g \
"

### performance
KAFKA_JVM_PERFORMANCE_OPTS=" \
-server \
-XX:+UseG1GC \
-XX:MaxGCPauseMillis=20 \
-XX:InitiatingHeapOccupancyPercent=35 \
-XX:+ExplicitGCInvokesConcurrent \
-XX:MaxInlineLevel=15 \
-Djava.awt.headless=true \
"
# -XX:ParallelGCThreads= \
# -XX:ConcGCThreads= \

### generic jvm settings
KAFKA_OPTS=" \
-Dreplicator1 \
-javaagent:/usr/local/confluent/prometheus/jmx_prometheus_javaagent-0.15.0.jar=1234:/usr/local/confluent/prometheus/kafka_connect.yml \
"

### gc option
GC_LOG_ENABLED="true"

### jmx
# JMX_PORT=""
KAFKA_JMX_OPTS=" \
-Dcom.sun.management.jmxremote \
-Dcom.sun.management.jmxremote.authenticate=false \
-Dcom.sun.management.jmxremote.ssl=false \
"

### log4j
KAFKA_LOG4J_OPTS=" \
-Dlog4j.configuration=file:/usr/local/confluent/log4j/replicator-log4j.properties \
"
