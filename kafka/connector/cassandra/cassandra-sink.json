{
  "name": "cassandra-sink",
  "config": {
    "connector.class": "io.confluent.connect.cassandra.CassandraSinkConnector",
    "tasks.max": "1",
    "topics": "pageviews",
    "cassandra.contact.points": "cassandra.example.com",
    "cassandra.port": "9042",
    "cassandra.local.datacenter": "datacenter1",
    "cassandra.security": "PASSWORD",
    "cassandra.username": "cassandra",
    "cassandra.password": "cassandra",
    "cassandra.keyspace": "kafka_storage",
    "cassandra.keyspace.create.enabled": "true",
    "cassandra.table.manage.enabled": "true",
    "cassandra.table.create.compression.algorithm": "NONE",
    "cassandra.offset.storage.table.enable": "true",
    "cassandra.offset.storage.table": "kafka_connect_offsets",
    "cassandra.consistency.level": "LOCAL_QUORUM",
    "cassandra.write.mode": "insert",
    "cassandra.deletes.enabled": "true",
    "cassandra.compression": "NONE",
    "transforms": "ValueToKey",
    "transforms.ValueToKey.type": "org.apache.kafka.connect.transforms.ValueToKey",
    "transforms.ValueToKey.fields": "userid",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schema.registry.url": "http://localhost:8081",
    "value.converter": "io.confluent.connect.avro.AvroConverter",
    "value.converter.schema.registry.url": "http://localhost:8081"
  }
}
